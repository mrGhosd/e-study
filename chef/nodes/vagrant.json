{
  "nginx": {
    "version": "2.7.6",
    "default_site_enabled": true,
    "source": {
      "modules": ["nginx::http_gzip_static_module", "nginx::http_ssl_module"]
    }
  },
  "rbenv": {
    "user_rubies": ["2.3.0"],
    "global": "2.3.0",
    "user_installs": [
      {
        "user": "vagrant",
        "global": "2.3.0",
        "rubies": ["2.3.0"],
        "gems": {
          "2.3.0": [
            { "name": "bundler" },
            { "name": "rake" },
            {
              "name": "rails",
              "version": "4.2.1"
            },
            { "name": "rubocop"  },
            { "name": "overcommit" },
            { "name": "sidekiq" }
          ]
        }
      }
    ]
  },
  "postgresql": {
    "version": "9.4",
    "password": {
      "postgres": "postgres"
    },
    "pg_hba": [
      {"type": "local", "db": "all", "user": "all", "method": "trust"}
    ]
  },
  "redisio": {
    "version": "3.2.3"
  },
  "java" : {
    "install_flavor" : "oracle",
    "jdk_version" : "8",
    "ark_timeout" : 1800,
    "oracle": {
        "accept_oracle_download_terms": true
      }
  },
  "elasticsearch": {
      "cluster.name" : "es_reimbursement_live",
      "bootstrap.mlockall" : false,
      "allocated_memory" : "400m",
      "network.host" : "127.0.0.1"
  },
  "run_list": [
    "recipe[postgresql::server]",
    "recipe[ruby_build]",
    "recipe[ruby_rbenv::user]",
    "recipe[postgresql]",
    "recipe[redisio]",
    "recipe[redisio::enable]",
    "recipe[java]",
    "recipe[elasticsearch]",
    "recipe[estudy]"
  ],
  "automatic": {
    "ipaddress": "127.0.0.1"
  }
}
